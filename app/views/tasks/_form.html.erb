<%= form_for @task, remote: true do |f| %>
  

  <div class="form0group">
    <%= f.text_area :description, placeholder: "Describe your task!", class: "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.datetime_select :deadline, class: "form-control"  %><br>
  </div>
  <div class="form-group">
    <% if @task.description == nil %>
    <%= f.submit "Create Task", class: "btn btn-success" %>
  <% else %>
    <%= f.submit "Update Task", class: "btn btn-danger" %>
    <% end %>
  </div>
<% end %>
